{
	"name": "ourtube",
	"version": "1.0.0",
	"description": "A music discord bot written in discord.js",
	"main": "dist/sharder.mjs",
	"directories": {
		"lib": "src"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"update": "yarn up \"*\" -i",
		"clean": "node scripts/clean-dist.mjs",
		"build": "yarn clean && tsup && tsc --p tsconfig.lang.json && tsc --noEmit",
		"lint": "eslint src scripts --ext mjs,ts --fix",
		"format": "prettier --write **/*.{ts,js,json,yml,yaml}",
		"prepare": "husky install",
		"start": "yarn build && node ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PixelPizza/OurTube.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/PixelPizza/OurTube/issues"
	},
	"homepage": "https://github.com/PixelPizza/OurTube#readme",
	"dependencies": {
		"@discordjs/opus": "^0.9.0",
		"@kaname-png/plugin-statcord": "^2.1.9",
		"@prisma/client": "^4.8.1",
		"@sapphire/decorators": "^5.0.0",
		"@sapphire/framework": "pr-512",
		"@sapphire/plugin-i18next": "^4.0.3",
		"@sapphire/plugin-logger": "^3.0.1",
		"@sapphire/time-utilities": "^1.7.8",
		"common-tags": "^1.8.2",
		"discord-player": "^5.3.2",
		"discord.js": "^14.7.1",
		"dotenv": "^16.0.3",
		"sodium-native": "^3.4.1",
		"tslib": "^2.4.1",
		"ytdl-core": "^4.11.2"
	},
	"devDependencies": {
		"@commitlint/config-angular": "17.4.0",
		"@sapphire/eslint-config": "4.3.8",
		"@sapphire/ts-config": "3.3.4",
		"@types/common-tags": "1.8.1",
		"@types/eslint": "8.4.10",
		"@types/node": "18.11.18",
		"@types/prettier": "2.7.2",
		"@typescript-eslint/eslint-plugin": "5.48.0",
		"@typescript-eslint/parser": "5.48.0",
		"eslint": "8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "8.0.3",
		"prettier": "2.8.2",
		"prisma": "4.8.1",
		"tsup": "6.5.0",
		"typescript": "4.9.4"
	},
	"packageManager": "yarn@3.3.1"
}
