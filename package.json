{
	"name": "ourtube",
	"version": "1.0.0",
	"description": "A music discord bot written in discord.js",
	"main": "dist/sharder.js",
	"directories": {
		"lib": "src",
		"test": "test"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"update": "yarn up \"*\" -i",
		"test": "vitest run",
		"test:watch": "vitest",
		"build": "tsup && tsc --p tsconfig.lang.json && tsc --p src/tsconfig.json --noEmit",
		"lint": "eslint src --ext mjs,ts --fix",
		"format": "prettier --write **/*.{ts,js,json,yml,yaml}",
		"prepare": "husky install",
		"start": "yarn build && node ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PixelPizza/OurTube.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/PixelPizza/OurTube/issues"
	},
	"homepage": "https://github.com/PixelPizza/OurTube#readme",
	"dependencies": {
		"@discord-player/extractor": "^4.4.0",
		"@discordjs/opus": "^0.9.0",
		"@kaname-png/plugin-statcord": "^2.1.12",
		"@prisma/client": "^5.0.0",
		"@sapphire/decorators": "^6.0.2",
		"@sapphire/framework": "^4.5.1",
		"@sapphire/plugin-i18next": "^5.0.4",
		"@sapphire/plugin-logger": "^3.0.5",
		"@sapphire/time-utilities": "^1.7.10",
		"common-tags": "^1.8.2",
		"discord-player": "^6.6.1",
		"discord.js": "^14.11.0",
		"dotenv": "^16.3.1",
		"sodium-native": "^4.0.4",
		"soundcloud-scraper": "^5.0.3",
		"spotify-url-info": "^3.2.5",
		"tslib": "^2.6.0",
		"youtube-sr": "^4.3.4",
		"ytdl-core": "^4.11.5"
	},
	"devDependencies": {
		"@commitlint/config-angular": "17.6.7",
		"@sapphire/eslint-config": "5.0.0",
		"@sapphire/eslint-plugin-result": "^2.0.0",
		"@sapphire/ts-config": "4.0.1",
		"@types/common-tags": "1.8.1",
		"@types/eslint": "8.44.0",
		"@types/node": "18.17.0",
		"@types/prettier": "2.7.3",
		"@typescript-eslint/eslint-plugin": "6.1.0",
		"@typescript-eslint/parser": "6.1.0",
		"discord-api-types": "^0.37.50",
		"eslint": "8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "alpha",
		"husky": "8.0.3",
		"prettier": "3.0.0",
		"prisma": "5.0.0",
		"tsup": "7.1.0",
		"typescript": "5.1.6",
		"vitest": "^0.33.0"
	},
	"packageManager": "yarn@3.6.1"
}
