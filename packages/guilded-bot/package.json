{
	"name": "@ourtube/guilded-bot",
	"private": true,
	"version": "2.0.0-dev",
	"description": "A guilded bot that plays music.",
	"author": "@pixelpizza",
	"license": "MIT",
	"main": "dist/index.mjs",
	"scripts": {
		"test": "vitest run",
		"lint": "eslint src test --ext ts --fix -c ../../eslint.config.mjs",
