	},
	"devDependencies": {
		"@favware/cliff-jumper": "^6.0.0",
		"@swc/core": "^1.12.1",
		"@vitest/coverage-v8": "^3.2.3",
		"esbuild-plugin-file-path-extensions": "^2.1.4",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vitest": "^3.2.3"
	}
