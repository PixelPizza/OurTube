{
	"name": "@ourtube/discord-bot",
	"private": true,
	"version": "2.0.0-dev",
	"description": "A discord bot that plays music.",
	"author": "@pixelpizza",
	"license": "MIT",
	"main": "dist/index.mjs",
	"scripts": {
		"test": "vitest run",
		"lint": "eslint src test --ext ts --fix -c ../../eslint.config.mjs",
		"build": "tsup",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"start": "cross-env NODE_ENV=production node .",
		"dev": "yarn build && cross-env NODE_ENV=development node ."
	},
	"dependencies": {
		"@sapphire/decorators": "^6.2.0",
		"@sapphire/framework": "^5.4.0",
		"cross-env": "^10.1.0",
		"discord.js": "14.24.2",
		"dotenv-cra": "^3.0.3"
	},
	"devDependencies": {
		"@favware/cliff-jumper": "^6.0.0",
		"@swc/core": "^1.15.1",
		"@vitest/coverage-v8": "^4.0.8",
		"esbuild-plugin-file-path-extensions": "^2.1.4",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vitest": "^4.0.8"
	}
}
